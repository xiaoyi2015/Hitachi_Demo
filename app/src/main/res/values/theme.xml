<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="icon_right_text_view">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:drawableRight">@drawable/icon_arrow_right</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="icon_right_text_view_layout">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="icon_right_text_view_label">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>