<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/dc_clock_bg_normal"
    android:id="@+id/scene_view"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@id/bg_bar"
        android:src="@drawable/dc_bg_bar_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/setting_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/clock_name"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:text="111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/clock_setting"
            android:layout_margin="5dp"
            android:layout_below="@+id/clock_name"
            android:text="11111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/clock_time"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="11111111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/clock_on_off"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/user"
            android:layout_below="@+id/clock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>