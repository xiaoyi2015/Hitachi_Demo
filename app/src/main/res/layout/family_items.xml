<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="120dp"
        android:id="@+id/cust1">

        <TextView
            android:id="@+id/admin_text1"
            android:gravity="center"
            android:textColor="@color/text_color_white"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ac.airconditionsuit.app.view.RoundImageView
            android:id="@+id/cust1_picture"
            android:src="@drawable/user_dc"
            android:scaleType="fitXY"
            android:layout_below="@+id/admin_text1"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/cust1_name"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/text_color_white"
            android:layout_below="@+id/cust1_picture" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="120dp"
        android:id="@+id/cust2">

        <TextView
            android:id="@+id/admin_text2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textColor="@color/text_color_white"
            android:layout_height="30dp" />

        <ac.airconditionsuit.app.view.RoundImageView
            android:id="@+id/cust2_picture"
            android:src="@drawable/user_dc"
            android:scaleType="fitXY"
            android:layout_below="@+id/admin_text2"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/cust2_name"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_height="30dp"
            android:textColor="@color/text_color_white"
            android:gravity="center"
            android:layout_below="@+id/cust2_picture" />

    </RelativeLayout>

</LinearLayout>