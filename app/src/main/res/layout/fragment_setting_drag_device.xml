<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ac.airconditionsuit.app.view.CommonTopBar
        android:id="@+id/default_top_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:leftIcon="@drawable/back"
        app:rightIcon="@drawable/save">

    </ac.airconditionsuit.app.view.CommonTopBar>

    <GridView
        android:id="@+id/receiver"
        android:layout_below="@+id/default_top_bar"
        android:layout_above="@+id/bottom_bar"
        android:numColumns="3"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </GridView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="@drawable/top_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ac.airconditionsuit.app.view.CommonDeviceView
            android:id="@+id/device1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/default_top_bar"
            app:bg_icon="@drawable/drag_air_icon"
            app:bottom_name="111"
            app:right_up_text="222"
            app:right_up_text_bg="@drawable/drag_air_name_bar"
            android:background="@drawable/top_banner">

        </ac.airconditionsuit.app.view.CommonDeviceView>
    </LinearLayout>
</RelativeLayout>