<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_icon"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/right_up_text"
        android:layout_alignRight="@+id/bg_icon"
        android:layout_alignTop="@+id/bg_icon"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:background="@drawable/drag_air_name_bar"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/right_up_icon"
        android:layout_alignRight="@+id/bg_icon"
        android:layout_alignTop="@+id/bg_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bottom_name"
        android:gravity="center"
        android:layout_below="@+id/bg_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>