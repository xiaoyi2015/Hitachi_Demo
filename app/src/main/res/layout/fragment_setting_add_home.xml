<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ac.airconditionsuit.app.view.CommonTopBar
        android:id="@+id/default_top_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
    </ac.airconditionsuit.app.view.CommonTopBar>

    <TextView
        android:id="@+id/add_home_text"
        android:layout_below="@id/default_top_bar"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="@color/text_color_gray"
        android:text="@string/add_home_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_new_home_name"
        style="@style/white_text_view_layout"
        android:layout_below="@id/add_home_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        />

</RelativeLayout>